<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalogsearch.leftnav">
            <block ifconfig="tweakwise/layered/enabled" class="Magento\Framework\View\Element\Template"
                   name="tweakwise.navigation.form" template="Emico_Tweakwise::layer/navigation-form.phtml"/>
            <block ifconfig="tweakwise/layered/enabled" class="Magento\Framework\View\Element\Template"
                   name="tweakwise.navigation.slider" template="Emico_Tweakwise::layer/navigation-slider.phtml"/>
            <block ifconfig="tweakwise/layered/enabled" name="loading" template="Hyva_Theme::ui/loading.phtml"/>
        </referenceBlock>
        <referenceBlock name="product_list_toolbar">
            <action method="setTemplate" ifconfig="tweakwise/layered/ajax_filters">
                <argument name="template" xsi:type="string">Emico_Tweakwise::product/list/toolbar.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
